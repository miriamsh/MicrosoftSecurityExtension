{
  "name": "microsoft-security-gate",
  "displayName": "Microsoft Security Gate",
  "description": "GATES",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      
			{
				"id": "widgetSamples",
				"title": "Settings Editor Widget Samples",
				"order": 2,
				"properties": {
          "activity.settings1": {
						"type": "object",
						"order": 2,
						"description": "An example numeric object setting.",
						"properties": {
              "type": "object",
              "properties": {
							"gate": {
								"type": "string",
								"description": "gate name"
							},
							"active": {
								"type": "boolean",
								"description": "activity state"
							}
						}},
						"additionalProperties": false
					}
				}
			},
			{
				"id": "configurationSamples",
				"title": "Configuration Sample",
				"properties": {		
          "conf.view.showOnWindowOpen": {
						"type": "array",
						"enum": [
							"explorer",
							"search",
							"scm",
							"debug",
							"extensions"
						],
						"default": "explorer",
						"description": "Window configuration: View to show always when a window opens",
						"scope": "window"
					},			
					"activity.settings": {
						"type": "object",
						"default": {},
						"description": "Resource configuration: Configure files using glob patterns to have an empty last line always",
						"scope": "window"
					},
          "try": {
						"type": "object",
						"default": {},
						"description": "Resource configuration: Configure files using glob patterns to have an empty last line always",
						"scope": "window"
					},			
					"activity.settings.array": {
						"type": "array",
						"default": [],
						"description": "Resource configuration: Configure files using glob patterns to have an empty last line always",
						"scope": "window"
					}
				}
			}
		],         
    "commands": [
      {
        "command": "gates.refreshEntry",
        "title": "gates.refreshEntry",
        "icon": "$(refresh)"
      },
      {
        "command": "kubesec.activate",
        "title": "kubesec.activate",
        "icon": "$(check)"
      },
      {
        "command": "kubesec.deactivate",
        "title": "kubesec.deactivate",
        "icon": "$(close)"
      },
      {
        "command": "gates.activate",
        "title": "gates.activate"
      },
      {
        "command": "microsoft-security-gate.gates",
        "title": "Microsoft Security Gate"
      },
      {
        "command": "gate.activate",
        "title": "Activate",
        "icon": "$(check)"
      },
      {
        "command": "gates.activate",
        "title": "Activate all",
        "icon": "$(check-all)"
      },
      {
        "command": "kubesec.showData",
        "title": "kubesec.showData"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Microsoft Security Gate",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "package-gates",
          "name": "Gates"
        },
        {
          "id": "package-outline",
          "name": "Outline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gates.refreshEntry",
          "group": "navigation"
        },
        {
          "command": "gates.activate",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kubesec.activate",
          "when": "view==package-gates&&viewItem==kubesec&& !kubesecActive",
          "group": "inline"
        },
        {
          "command": "kubesec.deactivate",
          "when": "view==package-gates&&viewItem==kubesec&& kubesecActive",
          "group": "inline"
        },
        {
          "command": "kubesec.showData"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "file-reader": "^1.1.1",
    "formdata-node": "^4.3.3",
    "get-all-files": "^4.1.0"
  }
}
