{
  "name": "microsoft-security-gate",
  "displayName": "Microsoft Security Gate",
  "description": "GATES",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
			{
				"id": "configurationSamples",
				"title": "Configuration Sample",
				"properties": {	 
          "microsoft.security.gate.gates.activity.settings": {
						"type": "object",
						"default": {},
						"description": "activity settings for all MICROSOFT SECURITY GATE gates",
						"scope": "window"
					}
				}
			}
		],         
    "commands": [
      {
        "command": "gates.refreshEntry",
        "title": "gates.refreshEntry",
        "icon": "$(refresh)"
      },
      {
        "command": "gate.activate",
        "title": "activate",
        "icon": "$(check)"
      },
      {
        "command": "gate.deactivate",
        "title": "deactivate",
        "icon": "$(close)"
      },
      {
        "command": "gates.activate",
        "title": "activate all",
        "icon": "$(check-all)"
      },
      {
        "command": "showTextDocument",
        "title": "showTextDocument"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Microsoft Security Gate",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "package-gates",
          "name": "Gates"
        },
        {
          "id": "package-outline",
          "name": "Outline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "gates.refreshEntry",
          "group": "navigation"
        },
        {
          "command": "gates.activate",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gate.activate",
          "when": "view==package-gates&&viewItem==kubesec&& !kubesecActive",
          "group": "inline"
        },
        {
          "command": "gate.deactivate",
          "when": "view==package-gates&&viewItem==kubesec&& kubesecActive",
          "group": "inline"
        },
        {
          "command": "showTextDocument"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "file-reader": "^1.1.1",
    "formdata-node": "^4.3.3",
    "get-all-files": "^4.1.0"
  }
}
